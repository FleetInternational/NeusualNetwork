<% include ../partials/header %>

<div class="jumbotron">
    <header class="jumbotron">
        <div class="container">
            <center>
                <h1><span class="glyphicon glyphicon-eye-open" aria-hidden="true" ></span></h1>
                <h2>Train your Neural Network right now, right here.</h2>

            <p>Welcome to Neusial Network</p>
                
